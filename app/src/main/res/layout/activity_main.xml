<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_collapseParallaxMultiplier="1.0">

    <ImageView
        android:id="@+id/laronlogo"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/logo" />

    <!--TextView
        android:id="@+id/role_label"
        android:text="Jenis User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:id="@+id/role"
        android:entries="@array/jenis_user"/ -->

    <TextView
        android:layout_marginTop="50px"
        android:id="@+id/npk_label"
        android:text="Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/npk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/password_label"
        android:text="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password" />

    <Button
        android:id="@+id/loginBtn"
        android:text="Log In"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorPrimary"
        style="@style/Widget.AppCompat.Button.Colored" />

    <!--View
        android:layout_width="1000dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@android:color/darker_gray"/>

    <Button
        android:id="@+id/registerLinkBtn"
        android:text="Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimary"
        style="@style/Widget.AppCompat.Button.Colored" /-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/phtlogo"
            android:layout_width="wrap_content"
            android:layout_height="112dp"
            android:src="@drawable/phtlogo"
            android:layout_gravity="center_horizontal|center"
            android:cropToPadding="false"
            android:adjustViewBounds="false"
            android:scaleType="fitEnd" />

    </LinearLayout>

</LinearLayout>